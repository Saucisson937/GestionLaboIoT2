<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionLaboIot.Login">
    <ContentPage.Content>
		<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Transparent" >
			<Label Text="Labo IoT" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
			<Entry x:Name="email" Placeholder="Email" HorizontalOptions="Center" WidthRequest="150"></Entry>
			<Entry x:Name="password" Placeholder="Mot de passe" IsPassword="True" HorizontalOptions="Center" WidthRequest="150"></Entry>
			<Button x:Name="login" Text="Connexion" HorizontalOptions="Center" BackgroundColor="#E12D53" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>