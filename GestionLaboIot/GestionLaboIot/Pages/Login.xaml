<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionLaboIot.Login" BackgroundColor="#00FFFD">
    <ContentPage.Content>
		<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Transparent" >
			<Label Text="Login :" FontSize="Medium" TextColor="Black" HorizontalOptions="Center"/>
			<Entry x:Name="entry_Login" Placeholder="Email" HorizontalOptions="Center" WidthRequest="150"></Entry>
			<Entry x:Name="entry_password" Placeholder="Password" IsPassword="True" HorizontalOptions="Center" WidthRequest="150"></Entry>
			<Button x:Name="button_Valid" Text="Valider" HorizontalOptions="Center" BackgroundColor="#FFD500" TextColor="Black"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>