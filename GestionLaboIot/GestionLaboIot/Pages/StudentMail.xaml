<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionLaboIot.Pages.StudentMail" BackgroundColor="#00FFFD">

	<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Transparent" >
		<Label Text="Entrez une adresse mail Ynov :" FontSize="Medium" TextColor="Black"/>
		<Entry x:Name="entry_Mail" Placeholder="prenom.nom@ynov.com"/>
		<Button x:Name="button_ValidMail" Text="Valider" BackgroundColor="#FFD500" TextColor="Black"/>
	</StackLayout>
</ContentPage>